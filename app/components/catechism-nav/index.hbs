<nav class='p-6 flex justify-between bg-cyan-800 text-white font-bold' ...attributes>
  {{#if @previous}}
    <LinkTo
      @route='catechism.question'
      @model={{@previous.number}}
      class='text-left border-b-2 border-cyan-800 hover:border-white'
    >
      ‹ Q.{{@previous.number}}
    </LinkTo>
  {{else}}
    <div class='text-left'></div>
  {{/if}}

  <LinkTo @route='catechism.index' class='text-center border-b-2 border-cyan-800 hover:border-white'>
    See all Questions
  </LinkTo>

  {{#if @next}}
    <LinkTo
      @route='catechism.question'
      @model={{@next.number}}
      class='text-right border-b-2 border-cyan-800 hover:border-white'
    >
      Q.{{@next.number}}
      ›
    </LinkTo>
  {{/if}}
</nav>