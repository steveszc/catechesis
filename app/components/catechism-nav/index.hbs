<nav class='p-6 flex justify-between bg-cyan-800 text-white font-bold' ...attributes>
  {{#if @previous}}
    <LinkTo
      @route='catechism.question'
      @model={{@previous.number}}
      class='grow text-left'
    >
      ‹ Q.{{@previous.number}}
    </LinkTo>
  {{else}}
    <div class='grow text-left'></div>
  {{/if}}

  <LinkTo @route='catechism.index' class='grow text-center'>
    See all Questions
  </LinkTo>

  {{#if @next}}
    <LinkTo
      @route='catechism.question'
      @model={{@next.number}}
      class='grow text-right'
    >
      Q.{{@next.number}}
      ›
    </LinkTo>
  {{/if}}
</nav>