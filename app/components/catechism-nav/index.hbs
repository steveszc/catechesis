<nav class='flex justify-between bg-cyan-800 text-white font-bold text-xs sm:text-sm md: text-base' ...attributes>
  {{#if @previous}}
    <LinkTo
      @route='catechism.question'
      @model={{@previous.number}}
      class='p-6 text-left group'
    >
      <span class="pb-1 border-b-2 border-transparent group-hover:border-white whitespace-nowrap">‹ Q.{{@previous.number}}</span>
    </LinkTo>
  {{else}}
    <div class='p-6 text-left' aria-hidden="true">
      <span class="invisible">‹ Q.1</span>
    </div>
  {{/if}}

  <LinkTo @route='catechism.index' class='p-6 text-center group'>
    <span class="pb-1 border-b-2 border-transparent group-hover:border-white">See all Questions</span>
  </LinkTo>

  {{#if @next}}
    <LinkTo
      @route='catechism.question'
      @model={{@next.number}}
      class='p-6 text-right group'
    >
      <span class="pb-1 border-b-2 border-transparent group-hover:border-white whitespace-nowrap">Q.{{@next.number}} ›</span>
    </LinkTo>
  {{else}}
    <div class='p-6 text-right' aria-hidden="true">
      <span class="invisible">Q.11 ›</span>
    </div>
  {{/if}}
</nav>