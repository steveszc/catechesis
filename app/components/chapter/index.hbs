<article class="flex flex-col justify-between" ...attributes>
  <h2 class="text-center">
    Chapter {{@data.chapter}}
    <div class="font-bold text-2xl">{{@data.title}}</div>
  </h2>
  <ol class="grow flex flex-col justify-center items-center">
    {{#each @data.sections as |section|}}
      <li class="my-6">
        <h3 class="text-center font-bold mb-2 text-lg">Section {{section.section}}</h3>
        <p class="max-w-prose text-xl">{{section.content}}</p>
      </li>
    {{/each}}
  </ol>
</article>
