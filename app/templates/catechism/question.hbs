<div class="h-full max-h-full flex flex-col">
  <nav class="bg-cyan-800 text-white font-bold flex">
    <div class="p-6 w-1/2 flex justify-between border-r border-black">
      {{#if @model.previous}}
        <LinkTo
          @route='catechism.question'
          @model={{@model.previous.number}}
          class="grow text-left"
        >
          ‹ Q.{{@model.previous.number}}
        </LinkTo>
      {{else}}
        <div class="grow text-left"></div>
      {{/if}}

      <LinkTo @route='catechism.index' class="grow text-center">
        See all Questions
      </LinkTo>

      {{#if @model.next}}
        <LinkTo
          @route='catechism.question'
          @model={{@model.next.number}}
          class="grow text-right"
        >
          Q.{{@model.next.number}} ›
        </LinkTo>
      {{/if}}
    </div>
    <div class="p-6 w-1/2 flex justify-around text-2xl">
      <LinkTo @route="catechism.question.index" class="border-b-2 border-cyan-800 hover:border-white">📜</LinkTo>
      <LinkTo @route="catechism.question.commentary" class="border-b-2 border-cyan-800 hover:border-white">💬</LinkTo>
      <LinkTo @route="catechism.question.prayer" class="border-b-2 border-cyan-800 hover:border-white">🙏</LinkTo>
    </div>
  </nav>

  {{#if @model.current}}
    <Question
      @data={{@model.current}}
      @isAnswerShown={{this.isAnswerShown}}
      @showAnswer={{this.showAnswer}}
    >
      {{outlet}}
    </Question>
  {{/if}}
</div>